<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Paleta principal -->
    <Color x:Key="PrimaryColor">#0E4170</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>

    <Color x:Key="AccentColor">#2E9D49</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

    <Color x:Key="BackgroundColor">#F6F8FA</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>

    <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#222222"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D32F2F"/>

    <!-- Espaciados reutilizables -->
    <Thickness x:Key="SpacingSmall">4</Thickness>
    <Thickness x:Key="Spacing">8</Thickness>
    <Thickness x:Key="SpacingLarge">16</Thickness>

    <!-- Radios -->
    <CornerRadius x:Key="CornerSmall">6</CornerRadius>
    <CornerRadius x:Key="CornerLarge">20</CornerRadius>

</ResourceDictionary>